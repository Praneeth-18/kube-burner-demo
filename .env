# Copy this file to `.env` to override load profile defaults without editing YAML.
# Values left unset fall back to `tmp/demo-user-data.yaml`.

# Toggle load generator creation (`true`/`false`).
ENABLE_LOAD=true

# Time windows that kube-burner waits before/after the load phase.
BASELINE_PAUSE=20s
LOAD_PAUSE=30s

# Load generator deployment replica count.
LOAD_REPLICAS=1

# Backend scale target applied via kube-burner patch job.
BACKEND_SCALE_REPLICAS=2

# Load generator scale-down delay before deletion.
LOAD_SCALE_DELAY=30s

# Request profile knobs consumed by the load generator container.
LOAD_BASE_RPS=10
LOAD_RAMP_FACTOR=5
LOAD_RAMP_INTERVAL_SECONDS=5
LOAD_RUN_DURATION_SECONDS=90
